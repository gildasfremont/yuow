<div class="bg-white rounded-lg shadow px-5 py-6 sm:px-6">
  <div class="max-w-lg mx-auto">
    <h1 class="text-3xl font-bold text-gray-900 text-center mb-8">
      Générer un lien de paiement
    </h1>
    
    <div class="space-y-6">
      <%= form_with url: '#', class: "space-y-4", data: { controller: "payment-form" } do |f| %>
        <div>
          <%= f.label :amount, "Montant", class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1 relative rounded-md shadow-sm">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <span class="text-gray-500 sm:text-sm">€</span>
            </div>
            <%= f.number_field :amount, 
                class: "focus:ring-yuow-500 focus:border-yuow-500 block w-full pl-7 pr-12 sm:text-sm border-gray-300 rounded-md",
                placeholder: "0.00",
                step: "0.01",
                min: "0" %>
          </div>
        </div>

        <%= f.submit "Générer le lien", 
            class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-yuow-600 hover:bg-yuow-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yuow-500" %>
      <% end %>
    </div>
  </div>
</div>
